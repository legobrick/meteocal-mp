                <web-resource-collection>
            <web-resource-name>Logged User</web-resource-name>
            <description/>
            <url-pattern>/user/*</url-pattern>
        </web-resource-collection>
                <auth-constraint>
            <role-name>USERS</role-name>
        </auth-constraint>
    </security-constraint>-->
</web-app>
